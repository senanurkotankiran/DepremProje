@model DepremProje.Models.Malzeme

@{
    ViewData["Title"] = "MalzemeGet";
    Layout = "~/Views/Shared/_DepremLayout.cshtml";
}

@using (Html.BeginForm("MalzemeGuncelle", "Malzeme", FormMethod.Post))
{
    @Html.Label("ID ")
    @Html.TextBoxFor(x=>x.MalzemeId,new{@class="form-control"} )
    <br />

    @Html.Label("Malzeme Ad ")
    @Html.TextBoxFor(x=>x.MalzemeAdi,new{@class="form-control"} )
    @* @Html.ValidationMessageFor(x=>x.KategoriAdi,"",new {@style="color:red"})*@
    <br />
    @Html.Label("Kategori ")
    @Html.DropDownListFor(x=>x.KategoriId,(List<SelectListItem>)ViewBag.v1, new {@class="form-control"})
    <br />
    @Html.Label("Stok")
    @Html.TextBoxFor(x=>x.MalzemeStokAdedi,new{@class="form-control"} )
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x=>x.MalzemeAciklamasi,new{@class="form-control"} )
    <br />

    <button class="btn btn-info">Kaydet</button>
}
